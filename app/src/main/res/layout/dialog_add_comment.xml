<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_addComment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عنوان نظر"
        android:maxLines="1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_addComment_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="top|right"
        android:hint="نظر خود را وارد کنید..."
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_addComment"
            style="@style/ButtonDefault.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/background_button_primary"
            android:text="ثبت نظر"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_addComment_cancel"
            style="@style/ButtonDefault.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/button_addComment"
            android:text="انصراف" />

        <ProgressBar
            android:id="@+id/progressBar_addComment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>